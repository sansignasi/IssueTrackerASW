<p id="notice"><%= notice %></p>

<h1>Issues</h1>

<p align="right"><Strong>Logged in as </Strong>
<%=current_user.first_name%>
&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= link_to 'Logout', logout_url %>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Type</th>
      <th>Priority</th>
      <th>Status</th>
      <th>Asigned</th>
      <th>Creator</th>
      <th>Created</th>
      <th>Updated</th>
      <th>Vote</th>
      <th>Watch</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.Title %></td>
        <td><%= issue.Description %></td>
        <td><%= issue.Type %></td>
        <td><%= issue.Priority %></td>
        <td><%= issue.Status %></td>
        <td><%= issue.Asigned %></td>
        <td><%= issue.Creator %></td>
        <td><%= issue.Created %></td>
        <td><%= issue.Updated %></td>
        <td><%= issue.Vote %></td>
        <td><%= issue.Watch %></td>
        <td><%= link_to 'Show', issue %></td>
        <% if issue.Creator == current_user.id %>
          <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
          <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>

<li class="pv1">
  <%= link_to 'All Issues', issues_path %>
</li>
<li class="pv1">
  <%= link_to 'Bugs', issues_path(issue_type: "bug") %>
</li>
<li class="pv1">
  <%= link_to 'Enhancements', issues_path(issue_type: "enhancement") %>
</li>
<li class="pv1">
  <%= link_to 'Proposals', issues_path(issue_type: "proposal") %>
</li>
<li class="pv1">
  <%= link_to 'Tasks', issues_path(issue_type: "task") %>
</li>